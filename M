    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const pages = document.querySelectorAll('.page:not(.cover)');
            const cover = document.getElementById('cover');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const currentPageSpan = document.getElementById('currentPage');
            const totalPagesSpan = document.getElementById('totalPages');
            
            let currentPageIndex = 0;
            const totalPages = pages.length * 2;
            totalPagesSpan.textContent = totalPages;

            function updatePageCounter() {
                currentPageSpan.textContent = currentPageIndex + 1;
            }

            function flipPage(pageIndex) {
                if (pageIndex < 0 || pageIndex >= totalPages) return;

                currentPageIndex = pageIndex;
                updatePageCounter();

                // Сбрасываем все страницы
                pages.forEach((page, index) => {
                    page.classList.remove('active', 'flipped');
                    
                    const pageNumber = index * 2 + 1;
                    if (pageNumber <= currentPageIndex) {
                        page.classList.add('flipped');
                    }
                    if (pageNumber === currentPageIndex) {
                        page.classList.add('active');
                    }
                });

                // Обработка обложки
                if (currentPageIndex === 0) {
                    cover.classList.remove('flipped');
                } else {
                    cover.classList.add('flipped');
                }
            }

            // Клик по странице
            pages.forEach((page, index) => {
                page.addEventListener('click', function() {
                    const pageNumber = index * 2 + 1;
                    if (pageNumber === currentPageIndex + 1) {
                        flipPage(pageNumber);
                    }
                });
            });

            // Клик по обложке
            cover.addEventListener('click', function() {
                if (currentPageIndex === 0) {
                    flipPage(1);
                }
            });

            // Кнопки навигации
            prevBtn.addEventListener('click', function() {
                if (currentPageIndex > 0) {
                    flipPage(currentPageIndex - 1);
                }
            });

            nextBtn.addEventListener('click', function() {
                if (currentPageIndex < totalPages - 1) {
                    flipPage(currentPageIndex + 1);
                }
            });

            // Инициализация
            flipPage(0);

            // Управление с клавиатуры
            document.addEventListener('keydown', function(event) {
                if (event.key === 'ArrowLeft') {
                    prevBtn.click();
                } else if (event.key === 'ArrowRight') {
                    nextBtn.click();
                }
            });
        });
    </script>
</body>
