    <script>
        // Words data with exact counts as specified
        // pencil: 1, school bag: 1, rubber: 1, ruler: 1, pencil case: 5, sharpener: 3, glue stick: 3
        const wordCounts = {
            "pencil": 1,
            "school bag": 1,
            "rubber": 1,
            "ruler": 1,
            "pencil case": 5,
            "sharpener": 3,
            "glue stick": 3
        };

        const wordColors = {
            "pencil": "rgba(255, 165, 0, 0.7)",
            "school bag": "rgba(0, 128, 0, 0.7)",
            "rubber": "rgba(255, 192, 203, 0.7)",
            "ruler": "rgba(128, 128, 128, 0.7)",
            "pencil case": "rgba(165, 42, 42, 0.7)",
            "sharpener": "rgba(255, 215, 0, 0.7)",
            "glue stick": "rgba(173, 216, 230, 0.7)"
        };

        // Create words array with exact counts
        const words = [];
        for (const [word, count] of Object.entries(wordCounts)) {
            for (let i = 0; i < count; i++) {
                words.push({
                    text: word,
                    color: wordColors[word],
                    id: word + '-' + i
                });
            }
        }

        // Game state
        let selectedWord = null;

        // Position words on the hat in three columns, higher up
        function placeWordsOnHat() {
            const hatContainer = document.querySelector('.hat-container');
            
            // Clear existing words
            const existingWords = document.querySelectorAll('.word-on-hat');
            existingWords.forEach(word => word.remove());
            
            // Sort words by type for better organization
            const sortedWords = [...words].sort((a, b) => a.text.localeCompare(b.text));
            
            // Calculate positions for three columns
            const wordsPerColumn = Math.ceil(sortedWords.length / 3);
            
            sortedWords.forEach((word, index) => {
                const wordElement = document.createElement('div');
                wordElement.className = 'word-on-hat';
                wordElement.textContent = word.text;
                wordElement.style.backgroundColor = word.color;
                wordElement.dataset.word = word.text;
                wordElement.dataset.id = word.id;
                
                let left, top;
                const column = Math.floor(index / wordsPerColumn);
                const positionInColumn = index % wordsPerColumn;
                
                // Three columns: 15%, 45%, 75% from left
                if (column === 0) {
                    left = 15;
                } else if (column === 1) {
                    left = 45;
                } else {
                    left = 75;
                }
                
                // Words positioned higher up (starting from 25% from top instead of 35%)
                top = 25 + (positionInColumn * 14);
                
                wordElement.style.left = `${left}%`;
                wordElement.style.top = `${top}%`;
                
                wordElement.addEventListener('click', () => selectWord(wordElement));
                hatContainer.appendChild(wordElement);
            });
        }

        // Select a word from the hat
        function selectWord(wordElement) {
            // Deselect previous word
            if (selectedWord) {
                selectedWord.classList.remove('selected');
            }
            
            selectedWord = wordElement;
            wordElement.classList.add('selected');
        }

        // Handle blank space clicks
        function setupBlankSpaces() {
            const blankSpaces = document.querySelectorAll('.blank-space');
            
            blankSpaces.forEach(space => {
                space.addEventListener('click', () => {
                    // Don't do anything if no word is selected or if space is already filled
                    if (!selectedWord || space.classList.contains('filled')) return;
                    
                    const correctWord = space.dataset.correct;
                    const selectedWordText = selectedWord.dataset.word;
                    
                    if (correctWord === selectedWordText) {
                        // Correct match - any copy of the word is acceptable
                        space.textContent = selectedWordText;
                        space.classList.add('filled');
                        selectedWord.style.display = 'none';
                        selectedWord = null;
                    } else {
                        // Incorrect match
                        space.classList.add('incorrect');
                        selectedWord.classList.add('incorrect');
                        
                        setTimeout(() => {
                            space.classList.remove('incorrect');
                            selectedWord.classList.remove('incorrect');
                            selectedWord.classList.remove('selected');
                            selectedWord = null;
                        }, 1000);
                    }
                });
            });
        }

        // Reset game function
        function resetGame() {
            // Reset all blank spaces
            const blankSpaces = document.querySelectorAll('.blank-space');
            blankSpaces.forEach(space => {
                space.textContent = '';
                space.classList.remove('filled', 'incorrect');
            });
            
            // Show all words on hat
            const wordElements = document.querySelectorAll('.word-on-hat');
            wordElements.forEach(word => {
                word.style.display = 'block';
                word.classList.remove('selected', 'incorrect');
            });
            
            selectedWord = null;
        }

        // Audio control function
        function toggleAudio() {
            const audio = document.getElementById('song');
            const video1 = document.getElementById('video1');
            const video2 = document.getElementById('video2');
            
            if (audio.paused) {
                audio.play();
                video1.play();
                video2.play();
            } else {
                audio.pause();
                video1.pause();
                video2.pause();
            }
        }

        // Print to PDF function
        function printPDF() {
            window.print();
        }

        // Initialize game
        document.addEventListener('DOMContentLoaded', () => {
            placeWordsOnHat();
            setupBlankSpaces();
            
            // Auto-play videos when audio starts
            const audio = document.getElementById('song');
            audio.addEventListener('play', () => {
                document.getElementById('video1').play();
                document.getElementById('video2').play();
            });
        });
    </script>
</body>
