<body>
    <div class="container">
        <div class="content-area" id="contentArea">
            <!-- Content will be dynamically inserted here -->
        </div>
        
        <div class="progress-container">
            <div class="progress" id="progressText">Step 1 of 9</div>
        </div>
        
        <div class="controls">
            <button id="resetBtn">Start Over</button>
        </div>
    </div>

    <script>
        const steps = [
            {
                image: 'Photos/IMG_20250922_232129_923.jpg',
                text: 'Is this your...?\nYes, it is.\nNo, it isn\'t.',
                showVideo: false,
                duration: 5000
            },
            {
                image: 'Photos/IMG_20250921_234051_721.jpg',
                video: 'Photos/1758863126562.mp4',
                text: 'Is this your rubber?\nNo, it isn\'t.\nIs this your notebook?\nYes, it is.',
                showVideo: true,
                videoDuration: 10000,
                textDuration: 10000
            },
            {
                image: 'Photos/IMG_20250921_234022_912.jpg',
                video: 'Photos/1758863126562.mp4',
                text: 'Is this your chair?\nNo, it isn\'t.\nIs this your book?\nYes, it is.',
                showVideo: true,
                videoDuration: 10000,
                textDuration: 10000
            },
            {
                image: 'Photos/IMG_20250922_231147_126.jpg',
                video: 'Photos/1758863126562.mp4',
                text: 'Is this your notebook?\nNo, it isn\'t.\nIs this your school bag?\nYes, it is.',
                showVideo: true,
                videoDuration: 10000,
                textDuration: 10000
            },
            {
                image: 'Photos/IMG_20250922_231930_289.jpg',
                video: 'Photos/1758863126562.mp4',
                text: 'Is this your rubber?\nNo, it isn\'t.\nIs this your pencil case?\nYes, it is.',
                showVideo: true,
                videoDuration: 10000,
                textDuration: 10000
            },
            {
                image: 'Photos/IMG_20250922_232500_968.jpg',
                video: 'Photos/1758863126562.mp4',
                text: 'Is this your set of coloured pencils?\nYes, it is.\nIs this your sharpener?\nNo, it isn\'t.',
                showVideo: true,
                videoDuration: 10000,
                textDuration: 10000
            },
            {
                image: 'Photos/IMG_20250922_181513_842.jpg',
                video: 'Photos/1758863126562.mp4',
                text: 'Is this your notebook?\nYes, it is.\nIs this your glue stick?\nNo, it isn\'t.',
                showVideo: true,
                videoDuration: 10000,
                textDuration: 10000
            },
            {
                image: 'Photos/1758525643.png',
                video: 'Photos/1758863126562.mp4',
                text: 'Is this your pencil?\nYes, it is.\nIs this your school bag?\nNo, it isn\'t.',
                showVideo: true,
                videoDuration: 10000,
                textDuration: 10000
            },
            {
                image: 'Photos/IMG_20250922_231300_669.jpg',
                video: 'Photos/1758863126562.mp4',
                text: 'Is this your pencil?\nYes, it is.\nIs this your sharpener?\nNo, it isn\'t.',
                showVideo: true,
                videoDuration: 10000,
                textDuration: 10000
            }
        ];

        let currentStep = 0;
        const contentArea = document.getElementById('contentArea');
        const resetBtn = document.getElementById('resetBtn');
        const progressText = document.getElementById('progressText');

        function showStep(stepIndex) {
            contentArea.innerHTML = '';
            const step = steps[stepIndex];
            
            progressText.textContent = `Step ${stepIndex + 1} of ${steps.length}`;
            
            if (step.showVideo) {
                // Create media container for image and video
                const mediaContainer = document.createElement('div');
                mediaContainer.className = 'media-container';
                
                // Show image
                const img = document.createElement('img');
                img.src = step.image;
                img.alt = `Step ${stepIndex + 1} image`;
                img.className = 'step-image';
                mediaContainer.appendChild(img);
                
                // Show video immediately with image
                const video = document.createElement('video');
                video.src = step.video;
                video.className = 'step-video';
                video.autoplay = true;
                video.controls = false;
                video.loop = true;
                video.currentTime = 0;
                mediaContainer.appendChild(video);
                
                contentArea.appendChild(mediaContainer);
                
                // Show text after video duration
                setTimeout(() => {
                    mediaContainer.remove();
                    showText(step.text, step.textDuration);
                }, step.videoDuration);
            } else {
                // For first step without video
                const img = document.createElement('img');
                img.src = step.image;
                img.alt = `Step ${stepIndex + 1} image`;
                img.className = 'step-image';
                contentArea.appendChild(img);
                
                // Show text immediately for first step
                showText(step.text, step.duration);
            }
        }

        function showText(text, duration) {
            const textElement = document.createElement('div');
            textElement.className = 'dialogue-text';
            textElement.textContent = text;
            contentArea.appendChild(textElement);
            
            // Automatically proceed to next step after specified duration
            if (currentStep < steps.length - 1) {
                setTimeout(() => {
                    currentStep++;
                    showStep(currentStep);
                }, duration);
            }
        }

        resetBtn.addEventListener('click', () => {
            currentStep = 0;
            showStep(currentStep);
        });

        // Initialize the first step
        showStep(currentStep);
    </script>
</body>
